generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Board {
  id        String     @id @default(uuid())
  title     String
  userId    String
  imageId   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  image     BoardImage @relation(fields: [imageId], references: [id])

  @@index([imageId])
}

model AuditLog {
  id        String   @id @default(uuid())
  action    ACTION
  entityId  String
  userId    String
  userImage String
  userName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  entity    Entity   @relation(fields: [entityId], references: [id])

  @@index([entityId])
}

model Entity {
  id       String      @id
  type     ENTITY_TYPE
  title    String
  auditLog AuditLog[]
}

model BoardImage {
  id       String  @id
  thumbUrl String
  fullUrl  String
  userName String
  linkHTML String
  board    Board[]
}

enum ACTION {
  CREATE
  UPDATE
  DELETE
}

enum ENTITY_TYPE {
  BOARD
  LIST
  CARD
}
